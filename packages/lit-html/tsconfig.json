{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "paths": { "*": ["types/*"] },
    "outDir": "dist",
    "lib": ["es2020", "DOM", "esnext.asynciterable", "DOM.Iterable"],
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  }
}
