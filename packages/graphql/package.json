{
  "name": "@rxdi/graphql",
  "version": "0.7.108",
  "repository": {
    "type": "git",
    "url": "https://github.com/rxdi/graphql"
  },
  "scripts": {
    "lint": "tslint -c tslint.json 'development/**/*.{ts,tsx}'",
    "pretest": "npm run lint",
    "build": "tsc || true",
    "test": "jest "
  },
  "author": {
    "name": "Kristian Tachev(Stradivario)",
    "email": "kristiqn.tachev@gmail.com"
  },
  "keywords": [
    "graphql",
    "gapi",
    "node"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rxdi/graphql/issues"
  },
  "homepage": "https://github.com/rxdi/graphql#readme",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "dependencies": {
    "@gapi/playground": "1.8.79",
    "apollo-errors": "1.9.0",
    "apollo-server-core": "2.12.0",
    "apollo-server-module-graphiql": "1.4.0",
    "boom": "^7.3.0",
    "fs-extra": "7.0.1",
    "graphql-tester": "0.0.5"
  },
  "devDependencies": {
    "graphql": "^14.5.8",
    "@rxdi/core": "^0.7.108",
    "@rxdi/hapi": "^0.7.108",
    "@types/graphql": "^14.5.0",
    "@types/hapi": "^18.0.4",
    "@types/jest": "^24.0.22",
    "@types/node": "^12.0.10",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.1",
    "rxjs": "^6.5.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.20.1",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.9.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "rootDir": "./",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ],
    "setupFilesAfterEnv": [
      "./jest-setup.ts"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "/src/*/.*\\.spec.(ts|tsx|js)$",
    "verbose": true,
    "collectCoverage": true
  }
}